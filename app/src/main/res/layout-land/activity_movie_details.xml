<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MovieDetailsActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="530dp"
        android:layout_height="298dp"
        android:layout_marginStart="33dp"
        android:src="@drawable/avengers"
        android:foreground="@drawable/bg_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/bg_desc" />

    <TextView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginStart="18dp"
        android:background="?android:selectableItemBackground"
        android:text="@string/back"
        android:textAllCaps="false"
        android:textColor="@color/btn_back"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/screen"
        app:layout_constraintTop_toTopOf="@+id/background"/>

    <TextView
        android:id="@+id/rating"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="226dp"
        android:layout_marginStart="16dp"
        android:background="@color/background"
        android:text="@string/age_limit"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/screen"
        app:layout_constraintTop_toTopOf="@+id/background" />

    <TextView
        android:id="@+id/title_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:layout_marginHorizontal="16dp"
        android:lineHeight="40sp"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/screen"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/genre"
        android:textColor="@color/pink"
        android:textSize="14sp"
        android:lineHeight="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/screen"
        app:layout_constraintTop_toBottomOf="@+id/title_movie" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/CustomRatingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:rating="4"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toStartOf="@+id/review"
        app:layout_constraintStart_toStartOf="@+id/screen"
        app:layout_constraintTop_toBottomOf="@+id/genre" />

    <TextView
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:text="@string/review"
        android:textAllCaps="true"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:lineHeight="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ratingBar"
        app:layout_constraintTop_toTopOf="@+id/ratingBar"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBar" />

    <TextView
        android:id="@+id/storyline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:text="@string/storyline"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/screen"
        app:layout_constraintTop_toBottomOf="@id/ratingBar" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/story"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:lineHeight="20dp"
        app:layout_constraintStart_toStartOf="@id/screen"
        app:layout_constraintEnd_toEndOf="@id/screen"
        app:layout_constraintTop_toBottomOf="@+id/storyline" />

</androidx.constraintlayout.widget.ConstraintLayout>